<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysBusiSystemMapper">

	<resultMap type="com.ruoyi.system.domain.SysBusiSystem" id="SysBusiSystemResult">
		<id     property="busiSystemId"        column="BusiSystem_id"       />
		<result property="busiSystemCode"      column="BusiSystem_code"     />
		<result property="busiSystemName"      column="BusiSystem_name"     />
		<result property="busiSystemSort"      column="BusiSystem_sort"     />
		<result property="status"        column="status"        />
		<result property="createBy"      column="create_by"     />
		<result property="createTime"    column="create_time"   />
		<result property="updateBy"      column="update_by"     />
		<result property="updateTime"    column="update_time"   />
		<result property="remark"        column="remark"        />
	</resultMap>

	<sql id="selectBusiSystemVo">
        select BusiSystem_id, BusiSystem_code, BusiSystem_name, BusiSystem_sort, status, create_by, create_time, remark
		from sys_BusiSystem
    </sql>

	<select id="selectBusiSystemList" parameterType="SysBusiSystem" resultMap="SysBusiSystemResult">
	    <include refid="selectBusiSystemVo"/>
		<where>
			<if test="busiSystemCode != null and busiSystemCode != ''">
				AND BusiSystem_code like concat('%', #{busiSystemCode}, '%')
			</if>
			<if test="status != null and status != ''">
				AND status = #{status}
			</if>
			<if test="busiSystemName != null and busiSystemName != ''">
				AND BusiSystem_name like concat('%', #{busiSystemName}, '%')
			</if>
		</where>
	</select>

	<select id="selectBusiSystemAll" resultMap="SysBusiSystemResult">
		<include refid="selectBusiSystemVo"/>
	</select>

	<select id="selectBusiSystemsByUserId" parameterType="Long" resultMap="SysBusiSystemResult">
		SELECT p.BusiSystem_id, p.BusiSystem_name, p.BusiSystem_code
		FROM sys_user u
			 LEFT JOIN sys_user_BusiSystem up ON u.user_id = up.user_id
			 LEFT JOIN sys_BusiSystem p ON up.BusiSystem_id = p.BusiSystem_id
		WHERE up.user_id = #{userId}
	</select>

	<select id="selectBusiSystemById" parameterType="Long" resultMap="SysBusiSystemResult">
		<include refid="selectBusiSystemVo"/>
		where BusiSystem_id = #{busiSystemId}
	</select>

	<select id="checkBusiSystemNameUnique" parameterType="String" resultMap="SysBusiSystemResult">
		<include refid="selectBusiSystemVo"/>
		 where BusiSystem_name=#{busiSystemName} limit 1
	</select>

	<select id="checkBusiSystemCodeUnique" parameterType="String" resultMap="SysBusiSystemResult">
		<include refid="selectBusiSystemVo"/>
		 where BusiSystem_code=#{busiSystemCode} limit 1
	</select>

 	<delete id="deleteBusiSystemByIds" parameterType="Long">
 		delete from sys_BusiSystem where BusiSystem_id in
 		<foreach collection="array" item="busiSystemId" open="(" separator="," close=")">
 			#{busiSystemId}
        </foreach>
 	</delete>

 	<update id="updateBusiSystem" parameterType="SysBusiSystem">
 		update sys_BusiSystem
 		<set>
 			<if test="busiSystemCode != null and busiSystemCode != ''">BusiSystem_code = #{busiSystemCode},</if>
 			<if test="busiSystemName != null and busiSystemName != ''">BusiSystem_name = #{busiSystemName},</if>
 			<if test="busiSystemSort != null and busiSystemSort != ''">BusiSystem_sort = #{busiSystemSort},</if>
 			<if test="status != null and status != ''">status = #{status},</if>
 			<if test="remark != null">remark = #{remark},</if>
 			<if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
 			update_time = sysdate()
 		</set>
 		where BusiSystem_id = #{busiSystemId}
	</update>

 	<insert id="insertBusiSystem" parameterType="SysBusiSystem" useGeneratedKeys="true" keyProperty="busiSystemId">
 		insert into sys_BusiSystem(
 			<if test="busiSystemId != null and busiSystemId != 0">BusiSystem_id,</if>
 			<if test="busiSystemCode != null and busiSystemCode != ''">BusiSystem_code,</if>
 			<if test="busiSystemName != null and busiSystemName != ''">BusiSystem_name,</if>
 			<if test="busiSystemSort != null and busiSystemSort != ''">BusiSystem_sort,</if>
 			<if test="status != null and status != ''">status,</if>
 			<if test="remark != null and remark != ''">remark,</if>
 			<if test="createBy != null and createBy != ''">create_by,</if>
 			create_time
 		)values(
 			<if test="busiSystemId != null and busiSystemId != 0">#{busiSystemId},</if>
 			<if test="busiSystemCode != null and busiSystemCode != ''">#{busiSystemCode},</if>
 			<if test="busiSystemName != null and busiSystemName != ''">#{busiSystemName},</if>
 			<if test="busiSystemSort != null and busiSystemSort != ''">#{busiSystemSort},</if>
 			<if test="status != null and status != ''">#{status},</if>
 			<if test="remark != null and remark != ''">#{remark},</if>
 			<if test="createBy != null and createBy != ''">#{createBy},</if>
 			sysdate()
 		)
	</insert>

</mapper>